<Window x:Class="ProjectWin123.UngVien.register_form_UV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWin123.UngVien"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="400" Width="450">
    <StackPanel>
        <StackPanel>
            <TextBlock Text="Đăng kí ứng viên" Foreground="Green" FontWeight="Bold" FontSize="30" TextAlignment="Center"></TextBlock>
        </StackPanel>
        <StackPanel Margin="0,20,0,10">
            <TextBox
 x:Name="txtTaiKhoan"
materialDesign:HintAssist.Hint="Tài khoản"
Style="{StaticResource MaterialDesignOutlinedTextBox}" Height="50" Width="400">
                <TextBox.Text>
                    <Binding
    Path="Text2"
    UpdateSourceTrigger="PropertyChanged">
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </StackPanel>
        <StackPanel Margin="0,10,0,10"
  Orientation="Vertical">
            <PasswordBox
                Width="400"
     x:Name="txtMatKhau"
    materialDesign:HintAssist.Hint="Mật khẩu"
    materialDesign:PasswordBoxAssist.Password="{Binding Path=Password2Validated, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
    Style="{StaticResource MaterialDesignOutlinedPasswordBox}" />
        </StackPanel>
        <StackPanel Margin="0,10,0,10">
            <TextBox
 x:Name="txtCanCuocCongDan"
materialDesign:HintAssist.Hint="Căn cước công dân"
Style="{StaticResource MaterialDesignOutlinedTextBox}" Height="50" Width="400">
                <TextBox.Text>
                    <Binding
    Path="Text2"
    UpdateSourceTrigger="PropertyChanged">
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button
                Grid.Column="0"
                Margin="0,0,20,50"
                Background="Green"
                Foreground="White"
    Height="40"
    Width="200"
    materialDesign:ButtonAssist.CornerRadius="10"
    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
    Style="{StaticResource MaterialDesignRaisedButton}"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
    Click="btnRegister_Click">
                <TextBlock
                    FontSize="25"
      Text="Đăng kí" />
            </Button>
            <Button
            Click="btnBack_Click"
                Grid.Column="1"
            Margin="0,0,0,50"
            Background="White"
            Foreground="Green"
Height="40"
Width="200"
materialDesign:ButtonAssist.CornerRadius="10"
IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
Style="{StaticResource MaterialDesignRaisedButton}"
ToolTip="MaterialDesignRaisedButton with Round Corners">
                <TextBlock
                FontSize="25"
  Text="Quay về" />
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
